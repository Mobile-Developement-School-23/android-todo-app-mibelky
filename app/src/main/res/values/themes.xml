<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/back_light_primary</item>
        <item name="colorOnPrimary">@color/color_light_blue</item>
        <item name="actionBarTheme">@style/ThemeOverlay.Actionbar</item>
    </style>

    <style name="Theme.ToDoApp" parent="Base.Theme.ToDoApp">
        <item name="switchStyle">@style/Widget.App.Switch</item>
        <item name="deleteButtonColor">@color/label_light_disable</item>
    </style>

    <!-- SWITCH THEME OVERLAY -->

    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorSecondary">@color/color_light_blue</item>
    </style>

    <!-- DELETE BUTTON STYLE -->
    <style name="Widget.App.IconButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/deleteButtonColor</item>
        <item name="iconTint">@null</item>
        <item name="iconStartPadding">0dp</item>
        <item name="iconGravity">start</item>
    </style>

    <style name="ThemeOverlay.Actionbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary" >
        <item name="android:action">@color/color_light_blue</item>
    </style>
</resources>