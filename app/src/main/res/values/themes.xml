<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/back_light_primary</item>
        <item name="colorOnPrimary">@color/label_light_primary</item>
        <item name="colorSecondary">@color/back_light_secondary</item>
        <item name="colorOnSecondary">@color/label_dark_secondary</item>
        <item name="colorLabelTertiary">@color/label_light_tertiary</item>
        <item name="colorPriorityHigh">@color/color_light_red</item>
        <item name="colorPriorityLow">@color/color_light_gray</item>
        <item name="colorPurpleAccent">@color/color_light_blue</item>
        <item name="colorGreenAccent">@color/color_light_green</item>

        <item name="actionBarTheme">@style/ThemeOverlay.Actionbar</item>


        <item name="deleteButtonColor">@color/label_light_disable</item>
        <!-- Switch color overlay -->
        <item name="switchStyle">@style/Widget.App.Switch</item>
    </style>

    <style name="Theme.ToDoApp" parent="Base.Theme.ToDoApp">

    </style>





    <!-- SWITCH THEME OVERLAY -->

    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorSecondary">@color/color_light_blue</item>
    </style>

    <!-- DELETE BUTTON STYLE -->
    <style name="Widget.App.IconButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/deleteButtonColor</item>
        <item name="iconTint">@null</item>
        <item name="iconStartPadding">0dp</item>
        <item name="iconGravity">start</item>
    </style>

    <style name="ThemeOverlay.Actionbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary" >
        <item name="android:action">@color/color_light_blue</item>
    </style>

    <style name="Theme.App.FloatActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">?attr/colorPurpleAccent</item>

</style>

    <!-- MAIN FRAGMENT APP BAR -->
    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>




</resources>